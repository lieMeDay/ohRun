<!-- 我的企业详情 -->
<view class="page">
	<view class="companyWrap">
		<view class="cBox">
			<view class="biglogo"></view>
			<view class="cMsg">
				<view class="cTit">
					<view class="ctcon">哈哈战队</view>
					<view class="setting">设置</view>
				</view>
				<view>1人</view>
				<view class="cDate">创建于 2020-02-02</view>
			</view>
		</view>
	</view>
	<!-- 有加入的团队显示 -->
	<view wx:if="{{0==1}}">
		<view class="TeamWrap">
			<view class="listWrap">
				<view class="listTit">
					<view data-i="1" bindtap="toggle">
						<view>战队活动</view>
						<view class="bline {{currI==1?'act':''}}"></view>
					</view>
					<view data-i="2" bindtap="toggle">
						<view>团队</view>
						<view class="bline {{currI==2?'act':''}}"></view>
					</view>
					<view data-i="3" bindtap="toggle">
						<view>排行榜</view>
						<view class="bline {{currI==3?'act':''}}"></view>
					</view>
				</view>
				<view class="listCon">
					<view class="lc" wx:if="{{currI==1}}">
						<view class="lcnr">
							<view class="cBox">
								<view class="biglogo"></view>
								<view class="cMsg">
									<view class="cTit">
										<view class="ctcon nrxt">团队定向赛</view>
									</view>
									<view>2020-02-02</view>
									<view class="cDate">所有团队</view>
								</view>
							</view>
						</view>
					</view>
					<view class="lc" wx:if="{{currI==2}}">
						<view class="lcnr">
							<view class="cBox">
								<view class="biglogo"></view>
								<view class="cMsg lcflex">
									<view class="cTit">
										<view class="ctcon nrxt">篮球队</view>
									</view>
									<view>1人</view>
								</view>
							</view>
						</view>
					</view>
					<view class="lc" wx:if="{{currI==3}}">3</view>
				</view>
			</view>
		</view>
		<view class="footer">
			<view wx:if="{{currI==1}}">发布活动</view>
			<view wx:if="{{currI==2}}">创建团队</view>
			<view>我的团队</view>
		</view>
	</view>
	<!-- 无加入团队显示 创建或加入 -->
	<view class="pBox">
		<view class="pCon">
			<view class="plogo"></view>
			<view class="pTxt">您还没有团队</view>
			<view class="pBtn">
				<navigator url="/pages/cTeam/cTeam" class="btn">创建</navigator>
				<navigator url="/pages/jTeam/jTeam" class="btn">加入</navigator>
			</view>
		</view>
	</view>
</view>