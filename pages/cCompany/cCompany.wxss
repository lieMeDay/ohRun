/* pages/cCompany/cCompany.wxss */
.page{
  width: 100%;
  position: absolute;
}
.pWrap {
  width: 95%;
  height: calc(100% - 140rpx);
  margin: 0 auto;
  overflow: auto;
}

.finish {
  width: 100%;
  height: 140rpx;
  /* position: fixed; */
  bottom: 0;
  z-index: 10;
}

.pC {
  margin-bottom: 20rpx;
  overflow: hidden;
}

.nb {
  margin-bottom: 0;
}

.logoBox {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin: 10rpx auto;
  /* border: 2rpx dashed springgreen; */
  background-color: #DFF7E8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logoBox image {
  width: 140rpx;
  height: 140rpx;
}

.logoBox image.sm {
  width: 100rpx;
  height: 100rpx;
}

.redX{
  color: red;
}
.tit {
  line-height: 60rpx;
}

.center {
  text-align: center;
}

.iptBox {
  margin-top: 10rpx;
  /* height: 70rpx; */
  /* border: 2rpx solid #ccc; */
  background-color: #F2F2F2;
  border-radius: 10rpx;
  line-height: 100rpx;
}
input {
  height: 100rpx;
  width: calc(100% - 40rpx);
  padding: 0 20rpx;
}
textarea{
  width: calc(100% - 30rpx);
  margin: 15rpx auto;
  height: 200rpx;
  line-height: 60rpx;
  display: block;
}
.tips {
  font-size: 32rpx;
  color: yellowgreen;
  width: auto;
  float: left;
  padding: 8px 0;
  background-color: #fff;
  text-align: left;
  font-weight: normal;
}

.finishBtn {
  width: 95%;
  height: 80rpx;
  margin: 26rpx auto;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}